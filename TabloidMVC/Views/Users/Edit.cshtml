@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Edit";
}

<h1>Change Profile Type</h1>

<h4>@Model.DisplayName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" class="form-control" type="hidden" />
                <div class="form-group">
                    <label asp-for="UserTypeId" class="control-label">Select User Type</label>
                    <select asp-for="UserTypeId" class="form-control">
                        <option value="2">Author</option>
                        <option value="1">Admin</option>
                    </select>
                     <span asp-validation-for="UserTypeId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
