@model TabloidMVC.Models.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Index";
}

    <div class="container pt-5">
        <h1>Users</h1>
        <p>
            @if (Model.Deactivated)
            {
                <a class="btn btn-outline-success" asp-action="Index" asp-route-deactivated="false">View Activated</a>
            }
            else
            {
                <a class="btn btn-outline-info" asp-action="Index" asp-route-deactivated="true">View Dectivated</a>
            }
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.DisplayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.UserType)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserType.Name)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            @if (Model.Deactivated)
                            {
                                <a asp-action="Reactivate" asp-route-id="@item.Id" class="btn btn-outline-light mx-1" title="Activate">Reactivate</a>
                            }
                            else
                            {
                                <a asp-action="Deactivate" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1" title="Deactivate">Deactivate</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
<script>
    let show = false

    const allDeactivated = document.querySelectorAll(".deactivated")

    const toggle = () => {
        if (!show) {
            allDeactivated.forEach(element => {
                element.style.display = "none"
            })
        }
    }
</script>